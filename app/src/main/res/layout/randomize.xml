<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="NAME"
        android:textSize="20sp"
        android:id="@+id/random_name"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="COST"
        android:textSize="20dp"
        android:id="@+id/random_cost"
        android:layout_toEndOf="@+id/random_name"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INGREDIETS"
        android:id="@+id/random_ingredients"
        android:layout_below="@+id/random_name"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PREPARATION"
        android:id="@+id/random_preparation"
        android:layout_below="@+id/random_ingredients"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp" />

</RelativeLayout>