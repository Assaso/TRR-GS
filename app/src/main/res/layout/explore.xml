<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/recipie_list"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="Q"
        android:id="@+id/recipie_search"
        android:layout_toEndOf="@+id/recipie_list"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="NAME"
        android:textSize="20sp"
        android:id="@+id/found_name"
        android:layout_below="@+id/recipie_list"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="COST"
        android:textSize="20dp"
        android:id="@+id/found_cost"
        android:layout_toEndOf="@+id/found_name"
        android:layout_below="@+id/recipie_list"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INGREDIETS"
        android:id="@+id/found_ingredients"
        android:layout_below="@+id/found_name"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PREPARATION"
        android:id="@+id/found_preparation"
        android:layout_below="@+id/found_ingredients"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp" />
</RelativeLayout>